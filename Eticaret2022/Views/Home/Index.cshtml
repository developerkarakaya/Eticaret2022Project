<script>
    function basketEkle(Id, adet) {

        $.ajax({
            method: "Post",
            url: "/Basket/AddProduct",
            data: { Id: Id, adet: adet },
            dataType: 'json',
            success: function (data) {
                if (data.rtnValue == true) {
                    ShowMessage("Ürün Başarıyla Sepete Eklenmiştir.", "s");
                    setTimeout(function () {
                        window.location.reload();
                    }, 2000);
                }
            }
        });

    }
</script>