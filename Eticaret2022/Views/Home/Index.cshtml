<table class="table-bordered" >
    <thead>
        <tr>
            <th>Urun Id</th>
            <th>Urun isim</th>
            <th>Urun Açıklama</th>
            <th>Sepete Ekle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UrunAdi</td>
                <td>@item.UrunAciklama</td>
                <td><a onclick="basketEkle(@item.Id,1)" >Sepete Ekle</a></td>
            </tr>
        }
    </tbody>
</table>

