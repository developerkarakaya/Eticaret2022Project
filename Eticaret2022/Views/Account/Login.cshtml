@using Eticaret2022.Models
@model LoginViewModel
<style>
</style>
<div class="row" >
   
    <div class="col-md-6" style=" background-color: white; padding:20px">
        <div class="form-giris" style="margin-left:30px">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = "/anasayfa" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="user-menu-content-top">
                    <div class="user-menu-title" style="font-weight:bold; font-size:19px">E-Ticaret Sitemize Hoşgeldiniz</div>
                    <br />
                    <div class="user-menu-subtitle" style="font-weight:bold; font-size:15px">Alışveriş İçin Giriş Yapın!</div>
                    <br />
                    <div class="user-menu-input">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "user-login-email", @placeholder = "E-Mail Giriniz" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <br />
                    <div class="user-menu-input">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "user-login-pass", @placeholder = "Şifre Giriniz" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <br />
                    <div class="row mb-4">
                        <div class="col-4">
                            <div class="checkbox-custom user-menu-remember">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @id = "custom-remember-me" })
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                        <div class="col-3">
                            <a href="sifremi-unuttum.html" class="user-menu-forgot-pass">Şifremi Unuttum</a>
                        </div>
                    </div>
                    <div class="user-menu-button">
                        <button type="submit" class="btn btn-primary btn-block" style="width:50%" data-selector="login-panel-button">Giriş Yap</button>
                    </div>
                </div>

                <br />
                <div class="user-menu-content-bottom">
                    <div class="user-menu-button">
                        <a href="uye-ol.html" style=" width: 50%; border: 2px solid; background-color: white; font-weight: bold;" class="btn btn-user-menu-signup btn-block">Üye Ol !</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-3" ></div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


